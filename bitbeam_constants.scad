// Bitbeam constants.
// All metric mm.


// Base measure (LEGO standard)
base = 0.8;

//Minkowski radius
mink_r = 1.5;

// Hole diameter
hole_diam = 6 * base + 0.25; // +0.2 added because of small holes

// Hole spacing
hole_space = 10 * base;

//Beam element length
beam_element_length = 10 * base;

// Beam width
beam_width = 10 * base;

// Beam height
beam_height = beam_width;

// Quality of shapes
$fn=40;
